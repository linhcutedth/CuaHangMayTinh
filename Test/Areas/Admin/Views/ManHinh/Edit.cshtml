@model Test.Models.Manhinh

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Cập nhật</h1>

<h4>Màn hình</h4>
<hr />
<div class="row" style="display:flex;justify-content:center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mamh" />
            <div class="form-group">
                <label asp-for="Kichthuoc" class="control-label"></label>
                <input asp-for="Kichthuoc" class="form-control" />
                <span asp-validation-for="Kichthuoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dophangiai" class="control-label"></label>
                <input asp-for="Dophangiai" class="form-control" />
                <span asp-validation-for="Dophangiai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tansoquet" class="control-label"></label>
                <input asp-for="Tansoquet" class="form-control" />
                <span asp-validation-for="Tansoquet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Congnghemh" class="control-label"></label>
                <input asp-for="Congnghemh" class="form-control" />
                <span asp-validation-for="Congnghemh" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Camung" id="Camung" value="Có" checked>
                    <label class="form-check-label" for="Camung">
                        Có cảm ứng
                    </label>
                </div>
                <div class="form-group col-md-1">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Camung" id="Camung" value="không">
                    <label class="form-check-label" for="Camung">
                        Không có cảm ứng
                    </label>
                </div>
            </div>
            @*<div class="form-group">
                <label asp-for="Camung" class="control-label"></label>
                <input asp-for="Camung" class="form-control" />
                <span asp-validation-for="Camung" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="mt-3">Trở về trang danh sách</a>
</div>

